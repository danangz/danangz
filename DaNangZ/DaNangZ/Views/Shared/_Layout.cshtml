<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>DaNangZ - Tin tức Đà Nẵng trong ngày mới nhất</title>
    <link href="~/Images/icon/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/jquery.jqGrid/ui.jqgrid.css" rel="stylesheet" />
    <link href="~/Content/dnzStyle/dnz-common.css" rel="stylesheet" />
    <link href="~/Content/themes/base/theme.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/jquery-ui-1.11.1.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.jqGrid.js" type="text/javascript"></script>
    <script src="~/Scripts/i18n/grid.locale-en.js"></script>

</head>
<body>
    <header>
        <div class="content-wrapper">
            <div class="float-left">
                <table style="text-align: left;">
                    <tr>
                        <td colspan="2">
                            <img src="~/Images/image/dnz-logo.png" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <img src="~/Images/icon/personal.png" style="padding-top: 5px;" />
                            <span style="color: #808080;">Xin chào <span style="font-weight: bold; color: #007233;">Võ Minh Thành!</span></span>
                            | <a href="#" style="color: #808080;">Đăng xuất</a>
                        </td>
                    </tr>
                </table>
                <br />
                <nav>
                    <ul id="menu">
                        <li>@Html.ActionLink("Dashboard", "Index", "Dashboard")</li>
                        <li>|</li>
                        <li>@Html.ActionLink("Danh mục", "Index", "Category")</li>
                        <li>@Html.ActionLink("Bài viết", "Index", "Entry")</li>
                        <li>@Html.ActionLink("Từ khóa", "Index", "Entry")</li>
                        <li>|</li>
                        <li>@Html.ActionLink("Thiết lập", "Index", "Dashboard")</li>
                        <li>@Html.ActionLink("Tài khoản", "Index", "Category")</li>
                        <li>|</li>
                        <li>@Html.ActionLink("Website", "Index", "Entry")</li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>
    <div id="body">
        <br />
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - Copyright by DaNangZ</p>
            </div>
        </div>
    </footer>


    @RenderSection("scripts", required: false)
</body>
</html>
